    </welcome-file-list>


    <servlet>
 
        <description />

        <display-name>Connector</display-name>

        <servlet-name>Connector</servlet-name>

        <servlet-class>com.rit.kpt.main.Connector</servlet-class>

    </servlet>


    <servlet-mapping>

        <servlet-name>Connector</servlet-name>

        <url-pattern>*.do</url-pattern>

    </servlet-mapping>
</web-app>
